{% extends 'base.html.twig' %}

{% block body %}

    <h2 class="mt-4">Products list</h2>
    <hr>

    <table class="table table-bordered table-">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ product.id }}</th>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}$</td>
                <td>{{ product.quantity }}</td>
                <td><span class="badge badge-{{ product.status == 'available' ? 'success' : 'danger' }}">{{ product.status }}</span></td>
                <td><a href="{{ path('product_update', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm">Edit</a> <a href="#" class="btn btn-outline-danger btn-sm">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}